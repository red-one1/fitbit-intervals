# Fitbit OAuth2
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=
FITBIT_REFRESH_TOKEN=
# Optional: user ID (defaults to '-')
FITBIT_USER_ID=-

# Intervals.icu
INTERVALS_API_BASE=https://intervals.icu
INTERVALS_API_TOKEN=
INTERVALS_ATHLETE_ID=
# Auth mode: basic (API key) or bearer (OAuth token)
INTERVALS_AUTH_MODE=basic
# Optional: override the wellness endpoint path
# Example: /api/v1/athlete/{athlete_id}/wellness/{date}
INTERVALS_WELLNESS_PATH=/api/v1/athlete/{athlete_id}/wellness/{date}

# Optional: JSON map from Intervals.icu field -> Fitbit source path
# Example:
# {"weight":"weight","restingHR":"rhr","sleepSecs":"sleep.minutes","sleepScore":"sleep.score","avgSleepingHR":"sleep.avg_hr","spO2":"spo2","hrv":"hrv.rmssd","readiness":"readiness","respiration":"respiration","steps":"summary.steps","kcalConsumed":"summary.caloriesOut"}
INTERVALS_FIELD_MAP_JSON=
